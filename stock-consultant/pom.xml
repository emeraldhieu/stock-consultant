        <!-- Mockito to mock behaviors -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.9.5</version>
            <scope>test</scope>
        </dependency>

        <!-- Used for integration tests -->
        <!--<dependency>-->
            <!--<groupId>org.jboss.resteasy</groupId>-->
